<h2 class="page-header"><%= book.title %></h2>
<img height="150" width="100" src="<%= book.coverImagePath %>" />
<div><p>Author Name: <%= book.author.name %></p></div>
<div><p>Publish Date: <%= book.publishDate.toDateString() %></p></div>
<div><p>Page Count: <%= book.pageCount %></p></div>
<% if (book.description != ''){ %>
<div><p>Description: <%= book.description %></p></div>
<% } %>
<div><a href="/books/<%= book.id %>/edit">Edit</a></div>
<%- include("../partials/deleteForm", { url : `/books/${book.id}` }) %>
<div><a href="/authors/<%= book.author.id %>">View Author</a></div>
